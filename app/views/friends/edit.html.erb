<div class="container justify-content-center w-50">
  <div class="card p-3 m-3">
    <h1 class="mt-3 mb-3 new-friend-title">Edit <%= @friend.name %>'s profile</h1>
      <%= simple_form_for(@friend) do |f| %>
        <%= f.input :name %>
        <%= f.input :birth_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :gender, as: :radio_buttons, collection: ['male', 'female'] %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price, label: "Price per day in â‚¬" %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Create a new Friend', class: 'btn btn-dark w-100 mb-5 mt-2' %>
      <% end %>
    </div>
</div>

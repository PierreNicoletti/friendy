<div class="container-fluid">
  <div class="container mt-2 mb-3">
    <div class="col-2">
    </div>
    <div class="col-8">
    <h1>New friend</h1>
      <%= simple_form_for(@friend) do |f| %>
        <%= f.input :name %>
        <%= f.input :birth_date, start_year: Date.today.year - 110, end_year: Date.today.year %>
        <%= f.input :gender %>
        <%= f.input :city %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'submit', class: 'btn btn-primary w-100 mb-5' %>
      <% end %>
    </div>
    </div>
    <div class="col-2">
    </div>
  </div>
</div>

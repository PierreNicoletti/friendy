<div class="container-fluid">
  <div class="container  mt-5 w-80">
    <h1>New friend</h1>

    <%= simple_form_for(@friend) do |f| %>
      <%= f.input :name %>
      <%= f.input :birth_date %>
      <%= f.input :gender %>
      <%= f.input :city %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>

      <%= f.submit 'submit', class: 'btn btn-primary w-100' %>
    <% end %>

    <div class="container text-center">
      <%= link_to 'back to list', friends_path%>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="container mt-2 mb-3">
    <div class="col-2">
    </div>
    <div class="col-8">
    <h1>New booking for <%= @friend.name %></h1>
      <%= simple_form_for [@friend, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.submit 'submit', class: 'btn btn-primary w-100 mb-5' %>
      <% end %>
    </div>
    </div>
    <div class="col-2">
    </div>
  </div>
</div>
